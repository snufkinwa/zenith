{
  "compilerOptions": {
    "skipLibCheck": true,
    "types": [],
    "typeRoots": [],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@/public/*": ["./public/*"],
      "@/components/*": ["./src/components/*"],
      "@components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@config/*": ["./src/config/*"],
      "@containers/*": ["./src/containers/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/context/*": ["./src/context/*"],
      "@/constants/*": ["./src/constants/*"],
      "@amplify/*": ["./amplify/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "amplify/**/*",
    ".amplify",
    ".amplify/**/*",
    "amplify_outputs.json"
  ]
}
